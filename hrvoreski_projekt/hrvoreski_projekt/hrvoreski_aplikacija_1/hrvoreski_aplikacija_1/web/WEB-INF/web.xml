<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <description>Konfiguracijska datoteka</description>
        <param-name>config</param-name>
        <param-value>NWTiS.db.config_1.xml</param-value>
    </context-param>
    <filter>
        <filter-name>AplikacijskiFilter</filter-name>
        <filter-class>org.foi.nwtis.hrvoreski.filteri.AplikacijskiFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AplikacijskiFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.foi.nwtis.hrvoreski.web.slusaci.SlusacAplikacije</listener-class>
    </listener>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>Kontroler</servlet-name>
        <servlet-class>org.foi.nwtis.hrvoreski.web.kontroleri.Kontroler</servlet-class>
        <run-as>
            <role-name>admin</role-name>
        </run-as>
        <security-role-ref>
            <description/>
            <role-name>admin</role-name>
            <role-link>admin</role-link>
        </security-role-ref>
    </servlet>
    <servlet>
        <servlet-name>GeoMeteoWS</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Kontroler</servlet-name>
        <url-pattern>/Kontroler</url-pattern>
        <url-pattern>/OdjavaKorisnika</url-pattern>
        <url-pattern>/IspisMeteoPodataka</url-pattern>
        <url-pattern>/IspisZahtjevaUpravljackogServera</url-pattern>
        <url-pattern>/IspisAdresa</url-pattern>
        <url-pattern>/UnosAdrese</url-pattern>
        <url-pattern>/Dokumentacija</url-pattern>
        <url-pattern>/IspisKorisnickihZahtjeva</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GeoMeteoWS</servlet-name>
        <url-pattern>/GeoMeteoWS</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>jsp/index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>org.foi.nwtis.hrvoreski.kontrole.NeuspjesnaPrijava</exception-type>
        <location>/error/NeuspjesnaPrijava.jsp</location>
    </error-page>
    <security-constraint>
        <display-name>SSL zastita</display-name>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <description/>
            <url-pattern>/privatno/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description>SSL sigurna veza</description>
            <transport-guarantee>INTEGRAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>aplikacija_1</realm-name>
        <form-login-config>
            <form-login-page>/jsp/login.jsp</form-login-page>
            <form-error-page>/error/NeuspjesnaPrijava.jsp?failed=true</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
</web-app>
