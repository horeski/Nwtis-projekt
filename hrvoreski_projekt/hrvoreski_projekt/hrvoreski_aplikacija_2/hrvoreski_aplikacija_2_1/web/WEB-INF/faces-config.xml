<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
            <supported-locale>hr</supported-locale>
        </locale-config>
        <resource-bundle>
            <var>m</var>
            <base-name>org.foi.nwtis.hrvoreski.i18n</base-name>
        </resource-bundle>
    </application>
    <navigation-rule>
        <from-view-id>/javni/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <to-view-id>/javni/pregledAdresa.xhtml</to-view-id>
        </navigation-case>    
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/javni/registracija.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{registracija.registriraj()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/javni/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/javni/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <from-action>#{login.login}</from-action>
            <to-view-id>/privatni/pregledPortfelja.xhtml</to-view-id>           
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/privatni/pregledPortfelja.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <from-action>#{logout.logout()}</from-action>
            <to-view-id>/javni/pregledAdresa.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/privatni/pregledSvihPoruka.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.pregledPoruke()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/privatni/pregledPoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.pregledPoruke()}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/privatni/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{pregledSvihPoruka.pregledPoruke()}</from-action>
            <from-outcome>NOT_OK</from-outcome>
            <to-view-id>/privatni/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>    
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/privatni/pregledPoruke.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>pregledPoruka</from-outcome>
            <to-view-id>/privatni/pregledSvihPoruka.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
